<UserControl x:Class="LenovoLegionToolkit.Plugins.Template.MyPluginTemplateSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LenovoLegionToolkit.Plugins.Template"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Plugin Settings"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,16"/>

            <CheckBox x:Name="EnableFeatureCheckBox"
                      Content="Enable Feature"
                      IsChecked="True"
                      Margin="0,8,0,8"/>

            <TextBlock Text="Configuration options for your plugin."
                       TextWrapping="Wrap"
                       Margin="0,16,0,0"/>
        </StackPanel>
    </Grid>

</UserControl>
