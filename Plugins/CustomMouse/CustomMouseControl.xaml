<UserControl x:Class="LenovoLegionToolkit.Plugins.CustomMouse.CustomMouseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:text="clr-namespace:LenovoLegionToolkit.Plugins.CustomMouse"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="420"
             d:DesignWidth="760">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{x:Static text:CustomMouseText.FeatureSubtitle}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16" />

        <TextBlock Grid.Row="1" Text="{x:Static text:CustomMouseText.DpiLabel}" Margin="0,0,0,4" />
        <Slider Grid.Row="2"
                x:Name="_dpiSlider"
                Minimum="100"
                Maximum="16000"
                TickFrequency="100"
                IsSnapToTickEnabled="True" />

        <TextBlock Grid.Row="3" Text="{x:Static text:CustomMouseText.PollingRateLabel}" Margin="0,12,0,4" />
        <ComboBox Grid.Row="4" x:Name="_pollingRateComboBox">
            <ComboBoxItem Content="125 Hz" Tag="125" />
            <ComboBoxItem Content="250 Hz" Tag="250" />
            <ComboBoxItem Content="500 Hz" Tag="500" />
            <ComboBoxItem Content="1000 Hz" Tag="1000" />
        </ComboBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,16,0,0">
            <Button Content="{x:Static text:CustomMouseText.ApplyButton}" Width="90" Click="ApplyButton_Click" />
            <Button Content="{x:Static text:CustomMouseText.ResetButton}"
                    Width="90"
                    Margin="8,0,0,0"
                    Click="ResetButton_Click" />
        </StackPanel>

        <TextBlock Grid.Row="6"
                   x:Name="_statusTextBlock"
                   Foreground="#FF2E7D32"
                   Margin="0,12,0,0"
                   TextWrapping="Wrap" />
    </Grid>

</UserControl>
