<wpfui:UiPage
    x:Class="LenovoLegionToolkit.Plugins.NetworkAcceleration.NetworkAccelerationPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:plugin="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration.Controls"
    xmlns:conv="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="Auto"
    FlowDirection="LeftToRight"
    Scrollable="False"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    MouseWheel="Page_MouseWheel"
    PreviewMouseWheel="Page_PreviewMouseWheel">
    
    <wpfui:UiPage.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Normalize typography: remove all bold weights for a cleaner, lighter look -->
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Normal" />
        </Style>
    </wpfui:UiPage.Resources>

    <Grid Margin="0,0,16,0" MouseWheel="Grid_MouseWheel" ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer 
            x:Name="_contentScrollViewer"
            Grid.Row="0" 
            Grid.RowSpan="2" 
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <StackPanel Margin="0,0,0,0" PreviewMouseWheel="StackPanel_PreviewMouseWheel">
                
                <!-- Header with Description -->
                <StackPanel Margin="0,12,0,20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            AutomationProperties.Name="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                            Focusable="True"
                            FontSize="24"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_PageTitle}" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_PageDescription}"
                            LineHeight="18" />
                    </StackPanel>
                </StackPanel>
                
                <!-- Traffic Stats - Compact Modern Design -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,16"
                    Visibility="{Binding IsServiceEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Border.Effect>
                        <DropShadowEffect
                            Color="Black"
                            Direction="270"
                            ShadowDepth="2"
                            Opacity="0.08"
                            BlurRadius="8" />
                    </Border.Effect>
                    <StackPanel>
                        <!-- Header with Title -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock
                                FontSize="18"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_AcceleratedTraffic}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Margin="0,3,0,0"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_TrafficStatistics}" />
                        </StackPanel>
                        
                        <!-- Total Traffic - Compact Display -->
                        <Border
                            Background="{DynamicResource SystemAccentColorBrush}"
                            CornerRadius="10"
                            Padding="18,14"
                            Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="White"
                                        Opacity="0.9"
                                        Margin="0,0,0,6"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_TotalTraffic}" />
                                    <TextBlock
                                        FontSize="32"
                                        Foreground="White"
                                        Text="{Binding TotalTraffic, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Download/Upload Stats - Compact Side by Side -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Download Section -->
                            <Border
                                Grid.Column="0"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="10"
                                Padding="16,14">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Margin="0,0,0,8"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_Downloaded}" />
                                    <TextBlock
                                        FontSize="26"
                                        Foreground="#E74C3C"
                                        Margin="0,0,0,6"
                                        Text="{Binding DownloadedTraffic, Mode=OneWay}" />
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#E74C3C"
                                        Text="{Binding DownloadSpeed, Mode=OneWay}" />
                                </StackPanel>
                            </Border>
                            
                            <!-- Upload Section -->
                            <Border
                                Grid.Column="2"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="10"
                                Padding="16,14">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Margin="0,0,0,8"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_Uploaded}" />
                                    <TextBlock
                                        FontSize="26"
                                        Foreground="#1E90FF"
                                        Margin="0,0,0,6"
                                        Text="{Binding UploadedTraffic, Mode=OneWay}" />
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#1E90FF"
                                        Text="{Binding UploadSpeed, Mode=OneWay}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Traffic Chart - Compact Header -->
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_TrafficChart}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Margin="0,2,0,0"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_TrafficChartDescription}" />
                                </StackPanel>
                                <wpfui:Button
                                    Grid.Column="1"
                                    x:Name="_resetStatisticsButtonInline"
                                    Content="{x:Static plugin:Resource.NetworkAcceleration_ResetStatisticsButton}"
                                    Click="ResetStatisticsButton_Click"
                                    Padding="10,5"
                                    FontSize="12"
                                    VerticalAlignment="Center" />
                            </Grid>
                            <controls:TrafficChartControl
                                x:Name="_trafficChartControl"
                                Height="320"
                                Visibility="{Binding IsServiceEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Service Status - Compact Design -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect
                            Color="Black"
                            Direction="270"
                            ShadowDepth="2"
                            Opacity="0.08"
                            BlurRadius="8" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Text -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock
                                    FontSize="16"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_ServiceStatus}" />
                                <TextBlock
                                    FontSize="16"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Margin="6,0,0,0"
                                    Text=":" />
                                <TextBlock
                                    FontSize="16"
                                    Foreground="{DynamicResource SystemAccentColorBrush}"
                                    Margin="6,0,0,0"
                                    Text="{Binding ServiceStatus, Mode=OneWay}" />
                            </StackPanel>
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding ServiceStatusDescription, Mode=OneWay}"
                                TextWrapping="Wrap"
                                LineHeight="16" />
                        </StackPanel>
                        
                        <!-- Toggle Switch -->
                        <wpfui:ToggleSwitch
                            Grid.Column="1"
                            x:Name="_serviceToggleSwitch"
                            IsChecked="{Binding IsServiceEnabled, Mode=TwoWay}"
                            Click="ServiceToggleSwitch_Click"
                            VerticalAlignment="Center" />
                    </Grid>
                </Border>

                <!-- DNS Optimization - Compact Design -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect
                            Color="Black"
                            Direction="270"
                            ShadowDepth="2"
                            Opacity="0.08"
                            BlurRadius="8" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock
                                FontSize="16"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_DnsOptimization}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Margin="0,3,0,0"
                                TextWrapping="Wrap"
                                LineHeight="16"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_DnsOptimizationDescription}" />
                        </StackPanel>
                        <wpfui:ToggleSwitch
                            Grid.Column="1"
                            x:Name="_dnsOptimizationToggle"
                            IsChecked="{Binding IsDnsOptimizationEnabled, Mode=TwoWay}"
                            VerticalAlignment="Center" />
                    </Grid>
                </Border>

                <!-- Request Interception - Compact Design -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect
                            Color="Black"
                            Direction="270"
                            ShadowDepth="2"
                            Opacity="0.08"
                            BlurRadius="8" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock
                                FontSize="16"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_RequestInterception}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Margin="0,3,0,0"
                                TextWrapping="Wrap"
                                LineHeight="16"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_RequestInterceptionDescription}" />
                        </StackPanel>
                        <wpfui:ToggleSwitch
                            Grid.Column="1"
                            x:Name="_requestInterceptionToggle"
                            IsChecked="{Binding IsRequestInterceptionEnabled, Mode=TwoWay}"
                            VerticalAlignment="Center" />
                    </Grid>
                </Border>



                <!-- Platform Acceleration - Compact Grouped Design -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect
                            Color="Black"
                            Direction="270"
                            ShadowDepth="2"
                            Opacity="0.08"
                            BlurRadius="8" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Margin="0,0,0,8"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_PlatformAcceleration}" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Margin="0,0,0,12"
                            TextWrapping="Wrap"
                            LineHeight="16"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_PlatformAccelerationDescription}" />
                        
                        <!-- GitHub Acceleration -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_Platform_GitHub}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,2,0,0"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_GithubAccelerationShortDescription}" />
                            </StackPanel>
                            <wpfui:ToggleSwitch
                                Grid.Column="1"
                                x:Name="_githubAccelerationToggle"
                                IsChecked="{Binding IsGithubAccelerationEnabled, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <!-- Steam Acceleration -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_Platform_Steam}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,2,0,0"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_SteamAccelerationShortDescription}" />
                            </StackPanel>
                            <wpfui:ToggleSwitch
                                Grid.Column="1"
                                x:Name="_steamAccelerationToggle"
                                IsChecked="{Binding IsSteamAccelerationEnabled, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <!-- Discord Acceleration -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_Platform_Discord}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,2,0,0"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_DiscordAccelerationShortDescription}" />
                            </StackPanel>
                            <wpfui:ToggleSwitch
                                Grid.Column="1"
                                x:Name="_discordAccelerationToggle"
                                IsChecked="{Binding IsDiscordAccelerationEnabled, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <!-- npm Acceleration -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_Platform_Npm}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,2,0,0"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_NpmAccelerationShortDescription}" />
                            </StackPanel>
                            <wpfui:ToggleSwitch
                                Grid.Column="1"
                                x:Name="_npmAccelerationToggle"
                                IsChecked="{Binding IsNpmAccelerationEnabled, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <!-- PyPI Acceleration -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_Platform_PyPI}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,2,0,0"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_PythonAccelerationShortDescription}" />
                            </StackPanel>
                            <wpfui:ToggleSwitch
                                Grid.Column="1"
                                x:Name="_pypiAccelerationToggle"
                                IsChecked="{Binding IsPypiAccelerationEnabled, Mode=TwoWay}"
                                VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>


            </StackPanel>
        </ScrollViewer>
    </Grid>

</wpfui:UiPage>






