<UserControl x:Class="LenovoLegionToolkit.Plugins.NetworkAcceleration.NetworkAccelerationSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:text="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="420"
             d:DesignWidth="760">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="16"
                    AutomationProperties.AutomationId="NetworkAcceleration_SettingsRoot">
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="{x:Static text:NetworkAccelerationText.SettingsTitle}"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <TextBlock Text="{x:Static text:NetworkAccelerationText.SettingsDescription}"
                               Margin="0,6,0,12"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                    <CheckBox x:Name="_autoOptimizeOnStartupCheckBox"
                              AutomationProperties.AutomationId="NetworkAcceleration_AutoOptimizeCheckBox"
                              Content="{x:Static text:NetworkAccelerationText.AutoOptimizeOnStartup}"
                              Margin="0,0,0,8" />

                    <CheckBox x:Name="_resetWinsockCheckBox"
                              AutomationProperties.AutomationId="NetworkAcceleration_ResetWinsockCheckBox"
                              Content="{x:Static text:NetworkAccelerationText.ResetWinsockOnOptimize}"
                              Margin="0,0,0,8" />

                    <CheckBox x:Name="_resetTcpIpCheckBox"
                              AutomationProperties.AutomationId="NetworkAcceleration_ResetTcpIpCheckBox"
                              Content="{x:Static text:NetworkAccelerationText.ResetTcpIpOnOptimize}" />

                    <StackPanel Margin="0,14,0,0">
                        <wpfui:Button Content="{x:Static text:NetworkAccelerationText.SaveSettingsButton}"
                                      Width="130"
                                      Appearance="Primary"
                                      HorizontalAlignment="Left"
                                      AutomationProperties.AutomationId="NetworkAcceleration_SaveSettingsButton"
                                      Click="SaveButton_Click" />

                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,12,0,0">
                            <TextBlock x:Name="_statusTextBlock"
                                       AutomationProperties.AutomationId="NetworkAcceleration_SettingsStatusText"
                                       Foreground="#FF2E7D32"
                                       TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
