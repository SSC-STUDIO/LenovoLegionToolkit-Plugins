<UserControl
    x:Class="LenovoLegionToolkit.Plugins.NetworkAcceleration.Controls.TrafficChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:plugin="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True">
    <Grid>
        <!-- Chart Canvas - Full Size -->
        <Border
            Background="{DynamicResource ControlFillColorSecondaryBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="20,24">
            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    Direction="270"
                    ShadowDepth="2"
                    Opacity="0.08"
                    BlurRadius="8" />
            </Border.Effect>
            <Canvas 
                x:Name="ChartCanvas" 
                ClipToBounds="True"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Border>
    </Grid>
</UserControl>