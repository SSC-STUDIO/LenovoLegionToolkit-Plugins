<UserControl x:Class="LenovoLegionToolkit.Plugins.NetworkAcceleration.NetworkAccelerationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:text="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="420"
             d:DesignWidth="760">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="16"
                    AutomationProperties.AutomationId="NetworkAcceleration_FeatureRoot">
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="{x:Static text:NetworkAccelerationText.QuickActionsTitle}"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <TextBlock Text="{x:Static text:NetworkAccelerationText.QuickActionsDescription}"
                               Margin="0,6,0,12"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                    <WrapPanel>
                        <wpfui:Button Content="{x:Static text:NetworkAccelerationText.RunQuickOptimizationButton}"
                                      Appearance="Primary"
                                      AutomationProperties.AutomationId="NetworkAcceleration_QuickOptimizeButton"
                                      Width="180"
                                      Margin="0,0,8,8"
                                      Click="QuickOptimizeButton_Click" />
                        <wpfui:Button Content="{x:Static text:NetworkAccelerationText.ResetNetworkStackButton}"
                                      AutomationProperties.AutomationId="NetworkAcceleration_ResetStackButton"
                                      Width="160"
                                      Margin="0,0,0,8"
                                      Click="ResetStackButton_Click" />
                    </WrapPanel>

                    <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0,8,0,0">
                        <TextBlock Text="{x:Static text:NetworkAccelerationText.AdminHint}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </Border>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="{x:Static text:NetworkAccelerationText.PreferredModeTitle}"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="_modeComboBox"
                                  Width="220"
                                  HorizontalAlignment="Left"
                                  AutomationProperties.AutomationId="NetworkAcceleration_ModeComboBox">
                            <ComboBoxItem Content="{x:Static text:NetworkAccelerationText.ModeBalanced}" Tag="Balanced" />
                            <ComboBoxItem Content="{x:Static text:NetworkAccelerationText.ModeGaming}" Tag="Gaming" />
                            <ComboBoxItem Content="{x:Static text:NetworkAccelerationText.ModeStreaming}" Tag="Streaming" />
                        </ComboBox>

                        <wpfui:Button Grid.Column="1"
                                      Content="{x:Static text:NetworkAccelerationText.SaveModeButton}"
                                      Appearance="Secondary"
                                      AutomationProperties.AutomationId="NetworkAcceleration_SaveModeButton"
                                      Width="110"
                                      Margin="8,0,0,0"
                                      Click="SaveModeButton_Click" />
                    </Grid>

                    <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="10"
                            Margin="0,12,0,0">
                        <TextBlock x:Name="_statusTextBlock"
                                   AutomationProperties.AutomationId="NetworkAcceleration_StatusText"
                                   TextWrapping="Wrap"
                                   Foreground="#FF2E7D32" />
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
